# EditorConfig for SupplierSystem .NET Project
# https://editorconfig.org

root = true

# C# files
[*.cs]
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

# Disable IDE1006 naming warnings (project uses PascalCase convention)
dotnet_diagnostic.IDE1006.severity = none

# .NET coding conventions
dotnet_sort_system_directives_first = true
dotnet_style_coalesce_expression = true
dotnet_style_null_propagation = true
dotnet_style_predefined_type_for_locals_parameters_members = true
dotnet_style_predefined_type_for_member_access = true

# Naming conventions
dotnet_naming_rule.interface_should_be_prefixed_with_i.severity = error
dotnet_naming_rule.interface_should_be_prefixed_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_prefixed_with_i.style = prefix_interface_with_i_style

dotnet_naming_rule.types_should_be_pascal_case.severity = warning
dotnet_naming_rule.types_should_be_pascal_case.symbols = types
dotnet_naming_rule.types_should_be_pascal_case.style = pascal_case_style

dotnet_naming_rule.private_or_internal_fields_should_be__camelCase.severity = warning
dotnet_naming_rule.private_or_internal_fields_should_be__camelCase.symbols = private_or_internal_fields
dotnet_naming_rule.private_or_internal_fields_should_be__camelCase.style = camel_case_field_underscore_style

dotnet_naming_style.pascal_case_style.capitalization = pascal_case
dotnet_naming_style.camel_case_field_underscore_style.capitalization = camel_case
dotnet_naming_style.camel_case_field_underscore_style.prefix = _

# Expression-bodied members
dotnet_style_object_initializer = true
dotnet_style_collection_initializer = true
dotnet_style_explicit_tuple_names = true
dotnet_style_prefer_inferred_tuple_names = true
dotnet_style_prefer_inferred_anonymous_type_member_names = true
dotnet_style_prefer_auto_properties = true

# "this." preferences
dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_qualification_for_method = false
dotnet_style_qualification_for_event = false

# Brace spacing
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_between_method_declaration_empty_parameter_list_parentheses = false
csharp_space_between_method_call_empty_parameter_list_parentheses = false

# Indent
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

# New line preferences
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_expression_clauses = true

# Async method suffix
dotnet_naming_rule.async_method_should_end_with_async.severity = error
dotnet_naming_rule.async_method_should_end_with_async.symbols = async_methods
dotnet_naming_rule.async_method_should_end_with_async.style = async_suffix_style

dotnet_naming_style.async_suffix_style.required_suffix = Async

# XML documentation
dotnet_style_require_accessibility_modifiers = for_non_interface_members
dotnet_diagnostic.severity = suggestion

# JSON files
[*.{json,jsonc}]
indent_size = 2
trim_trailing_whitespace = false

# Dockerfile
[Dockerfile]
indent_style = tab
