# =============================================
# PRODUCTION Environment Configuration
# =============================================
# Copy this to .env.production and fill with actual production values

# Backend
PORT=3001
DB_FILE=/var/app/data/supplier.db
JWT_SECRET=REPLACE_WITH_STRONG_64_CHAR_SECRET_FROM_CRYPTO_RANDOM
JWT_EXPIRES_IN=7d

# CORS - CRITICAL: Change to your actual production domain
CLIENT_ORIGIN=https://your-production-domain.com

# SMTP - Production mail server
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@your-company.com
EMAIL_FROM_NAME=Supplier Management System

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.zip
UPLOAD_DIR=/var/app/uploads

# Frontend
VITE_API_BASE_URL=https://api.your-production-domain.com

# Application
NODE_ENV=production
DEBUG=false
SESSION_TIMEOUT=480

# Backup
BACKUP_DIR=/var/app/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Security
RATE_LIMIT_MAX=100
FORCE_HTTPS=true

# Logging
LOG_LEVEL=warn
LOG_DIR=/var/app/logs

# Optional: Monitoring
# SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id
